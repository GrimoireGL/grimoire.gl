  //   justify-content flex-start
@media mq-small-pc
  #column-wrap
    justify-content flex-start
    #content
      margin-left sidebar-width

@media mq-tablet
  #column-wrap
    justify-content center
    #content
      margin-left 0
  #sidebar
    display none

@media mq-mobile
  #column-wrap
    justify-content center
    #content
      padding-top 25px
      margin-top mobile-header-height
      margin-left side-spacing
      margin-right side-spacing
      width 'calc(100% - %s)' % (side-spacing * 2)
  #sidebar
    display none
  #header
    justify-content center
    height mobile-header-height
    #logo-wrap
      margin-left 0
      height 30px
      #logo-icon
        width 30px
      #logo-font
        display none
    #menu-wrap
      display none
