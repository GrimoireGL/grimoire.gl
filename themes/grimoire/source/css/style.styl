mobile-sidebar()
  transition 0.3s margin-left
  background-color rgba(0, 0, 0, 0.85)
  #doc-title
    color color-inverse
  #list
    .sub-menu
      li.active
        a
          color color-inverse

@media mq-small-pc
  #column-wrap
    justify-content flex-start
    #content
      margin-left sidebar-width

@media mq-tablet
  #column-wrap
    justify-content center
    #content
      margin-left 0
  #sidebar
    margin-left -1 * sidebar-width
    height 100%
    mobile-sidebar()
    &.active
      margin-left 0
  #logo-wrap
    margin-left 30px
  #header
    .hamburger
      display inline-block

@media mq-mobile
  #column-wrap
    justify-content center
    #content
      padding-top 25px
      margin-top mobile-header-height
      margin-left side-spacing
      margin-right side-spacing
      width 'calc(100% - %s)' % (side-spacing * 2)
  #sidebar
    margin-left -1 * sidebar-width
    top mobile-header-height
    height 100%
    padding-top 95px
    mobile-sidebar()
    &.active
      margin-left 0
  #header
    justify-content center
    height mobile-header-height
    #logo-wrap
      margin-left 0
      height 30px
      #logo-icon
        width 30px
      #logo-font
        display none
    #menu-wrap
      position absolute
      left -1 * sidebar-width
      width sidebar-width
      top mobile-header-height
      padding 18px 0 15px
      border-bottom 1px solid color-inverse-normal
      transition 0.3s left
      background-color rgba(0, 0, 0, 0.8)
      &.active
        left 0
      a
        font-size 14px
        color color-inverse
        &::after
          background-color color-inverse
    .hamburger
      display inline-block
      position absolute
      left -10px
      height 18px
      width 18px
