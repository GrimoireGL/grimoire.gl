@import '_partial/menu'
@import '_variables'
@import '_util/flex'
@import '_util/misc'
@import '_util/button'
@import '_partial/syntax'
@import '_partial/font-awesome.min.css'

html
  height 100%

body
  height 100%
  margin 0
  font-family font-sans
  line-height line-height
  letter-spacing letter-spacing
  overflow-x hidden

#primary
  content-align = 'vertical'
  flex-init(content-align)
  flex-center('horizontal', content-align)
  background-color color-inverse
  // box-shadow inset 0px 0px 200px rgba(0, 0, 0, .60)
  text-align center
  position relative
  overflow-x hidden
  overflow-y hidden
  height 600px
  > div
    z-index 2

#bg
  position absolute
  top 30%
  left 50%
  transform translate(-50%, -50%)

div#bg
  z-index 1

div#logo-icon, div#logo-desc, div#logo-sub-desc
  z-index 0


canvas
  left 0px

nav
  box-si1ing border-box
  width 100%
  margin-bottom 40px
  position relative
  border-bottom 1px solid color-inverse-normal
  margin-top 30px
  height 50px

#menu
  max-width 800px
  width 80%
  left 50%
  transform translate(-50%, 0)
  position absolute
  z-index 10
  menu(color-inverse-normal, color-primary)

#logo-icon
  // z-index 10
  background-image logo-icon
  bg-image-alone()
  height 140px
  width 140px

#logo-font
  display none
  margin-top -2px
  // font-family 'Banda Regular'
  font-size 80px
  // background linear-gradient(90deg, color-primary, color-secondary 60%)
  background-image logo-font
  bg-image-alone()
  height 55px
  // background-clip text
  // -webkit-background-clip text // auto-prefixer not working
  // -moz-background-clip text
  // -ms-background-clip text
  // -o-background-clip text
  -webkit-text-fill-color transparent // chrome
  color transparent // safari, firefox

#logo-tag-wrap
  position relative

#logo-tag
  position absolute
  font-size 13px
  color color-inverse
  right -184px
  top -37px
  font-weight bold
  background-color color-inverse-normal
  padding 4px 7px 3px 8px
  border-radius 4px
  text-shadow 0 0 2px rgba(0, 0, 0, 0.3)
  box-shadow inset 0 0 2px rgba(0, 0, 0, 0.3)

#logo-desc
  margin-top 30px
  font-size 40px
  font-weight bold
  color color-inverse-emphasis

#logo-sub-desc
  font-size 17px
  line-height 1.8em
  color color-inverse-normal
  width 700px

#social
  margin 24px 0 28px
  font-size 15px
  display flex
  > div
    margin 0 10px
  i
    margin-right 5px
  a
    color color-inverse-emphasis
    text-decoration none

    &:hover
      opacity 0.7

#primary-buttons
  width 500px
  justify-content space-around
  flex-init('horizontal')
  > div
    width 230px
  a
    button(color-primary, color-inverse)

#social-buttons
  margin-top 120px
  width 270px
  .wrap
    flex-init('horizontal')
    justify-content center
    width 300px
    > *
      width 100px
      display block
      margin 0 5px

black-section()
  background-color color-black

  .front
    .title
      color color-black-emphasis
      font-size 28px
      font-weight bold
      line-height 1.4
      text-align center
      text-shadow 0 1px 2px #000

#sample
  black-section()
  padding 50px 40px 0

  .front
    padding 0 60px
    .title
      margin-bottom 30px

  .wrap
    flex-init('horizontal')
    justify-content center
    flex-wrap wrap

  .card
    margin 0 15px 30px
    border-radius 3px
    height 200px
    width 370px
    max-width 370px
    box-sizing border-box
    padding 20px 20px
    background-color color-black-emphasis
    box-shadow 0 1px 2px 0 #000
    position relative

    .edit-button
      display block
      position absolute
      font-size 14px
      right 20px
      bottom 12px
      color color-black
      opacity 0.3
      text-decoration none

      &:hover
        opacity 0.8
        text-decoration underline

    &.preview
      > *
        margin 0 auto

    figure
      margin 0
      overflow-x auto

      .gutter
        display none

      pre
        margin 0
        color color-black
        line-height line-height
        letter-spacing 0.03em
        font-family font-mono

        .line
          font-size 12px

#description
  black-section()

  text-align center
  text-shadow 0 1px 2px #000
  padding 60px 80px 80px

  .front
    padding 0 60px
    .title
      margin-bottom 20px
    .content
      color color-black-emphasis
      font-size 17px
      line-height 1.8

  .small
    ul
      display flex
      justify-content center
      flex-wrap wrap
      -webkit-flex-wrap wrap
      list-style none
      padding 0
      margin 0
    strong
      color color-secondary
    .container
      box-sizing border-box
      width 400px
      padding 60px 0 0 0
      margin 0 20px
    .icon
      font-size 45px
      color color-black-emphasis
      margin-bottom 20px
    .title
      color color-black-emphasis
      font-size 18px
      font-weight bold
      margin-bottom 20px
    .content
      color color-black-emphasis
      font-size 14px
    .center
      flex-init('vertical')
      flex-center('both', 'vertical')
    .plus
      font-size 60px
      color color-black-emphasis

#examples
  .front
    font-size 20px
    color color-black
  .container
    height 200px

#contributors
  padding 70px 140px 80px

  black-section()

  .front
    .title
      margin-bottom 40px

  #avatars
    flex-init('horizontal')
    justify-content space-around
    flex-wrap wrap

    .wrap
      width 90px
      display block
      margin 0 10px 20px

      img
        display block
        box-shadow 0 1px 2px #000
        border-radius 50%
        height 50px
        width 50px
        margin 0 auto 5px

      .screen-name
        display block
        text-align center
        color color-black-emphasis
        text-decoration none
        text-shadow 0 1px 2px #000
        font-size 13px
        word-wrap break-word

        &:hover
          text-decoration underline

  .message
    padding 10px 0 0
    text-align center

    a
      font-size 11px
      text-shadow 0 1px 2px #000
      color color-black-emphasis
      text-decoration none

    &:hover
      text-decoration underline

  #contribution-button
    button(color-black-emphasis, color-black)
    box-shadow 0 1px 2px #000

#footer
  text-align center
  padding 60px 130px
  background linear-gradient(90deg, color-primary, color-secondary 60%)

#get-started-button
  button(alpha(color-inverse, 0.9), color-middle)

#footer-text
  margin-top 40px
  color alpha(color-inverse, 0.9)
  font-size 12px
  div
    margin-bottom 3px
  a
    color alpha(color-inverse, 0.9)

.__slackin
  z-index 1000

@media mq-mobile
  #sample
    padding-left 10px
    padding-right 10px

  #primary-buttons
    .install
      display none
  #description
    padding-right 30px
    padding-left 30px

    .front
      padding 0
  #contributors
    padding-right 30px
    padding-left 30px
  nav
    width 300px
  #menu
    width 300px

  #footer
    padding 60px 30px
